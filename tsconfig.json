{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": false,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
